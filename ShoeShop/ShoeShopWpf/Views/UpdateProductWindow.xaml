<Window x:Class="ShoeShopWpf.Views.UpdateProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                Title="Добавление товара" 
        Height="750" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Icon="/Icon.ico">

    <Grid Background="#FFFFFF" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock x:Name="TitleTextBlock" 
                           Text="Добавить товар" 
                           FontSize="18" 
                           FontWeight="Bold"
                           Foreground="#2E8B57"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
            <StackPanel>
                <Label Content="Артикул"/>
                <TextBox x:Name="ArticleTextBox" 
                         MaxLength="50"/>

                <Label Content="Наименование"/>
                <TextBox x:Name="NameTextBox" 
                         MaxLength="100"/>

                <Label Content="Описание"/>
                <TextBox x:Name="DescriptionTextBox" 
                         MaxLength="500"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         Height="60"
                         VerticalScrollBarVisibility="Auto"/>

                <Label Content="Изображение товара"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Border BorderBrush="#CCCCCC" 
                            BorderThickness="1" 
                            Background="#F8F8F8" 
                            Width="120" 
                            Height="120" 
                            Margin="0,0,10,0">
                        <Image x:Name="ProductImagePreview" 
                               Stretch="Uniform"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel>
                        <TextBox x:Name="PhotoPathTextBox" 
                                 Width="250"
                                 IsReadOnly="True"
                                 ToolTip="Путь к изображению"/>

                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <Button x:Name="BrowseImageButton" 
                                    Content="Изменить.."
                                    Click="BrowseImageButton_Click"
                                    Width="100"/>

                            <Button x:Name="ClearImageButton" 
                                    Content="Отмена"
                                    Click="ClearImageButton_Click"
                                    Width="100"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <Label Content="Единица измерения"/>
                <TextBox x:Name="UnitTextBox" 
                         MaxLength="20"
                         Text="шт."/>

                <StackPanel Orientation="Horizontal">
                    <StackPanel Width="250" Margin="0,0,10,0">
                        <Label Content="Цена"/>
                        <TextBox x:Name="PriceTextBox" 
                                 PreviewTextInput="NumberValidationTextBox"/>
                    </StackPanel>

                    <StackPanel Width="150">
                        <Label Content="Скидка (%)"/>
                        <TextBox x:Name="DiscountTextBox" 
                                 Text="0"
                                 PreviewTextInput="NumberValidationTextBox"/>
                    </StackPanel>
                </StackPanel>

                <Label Content="Количество на складе"/>
                <TextBox x:Name="QuantityTextBox" 
                         Text="0"
                         PreviewTextInput="NumberValidationTextBox"/>

                <Label Content="Категория"/>
                <ComboBox x:Name="CategoryComboBox" 
                          DisplayMemberPath="Name"
                          SelectedValuePath="CategoryId"/>

                <Label Content="Производитель"/>
                <ComboBox x:Name="ManufacturerComboBox" 
                          DisplayMemberPath="Name"
                          SelectedValuePath="ManufacturerId"/>

                <Label Content="Поставщик"/>
                <ComboBox x:Name="SupplierComboBox" 
                          DisplayMemberPath="Name"
                          SelectedValuePath="SupplierId"/>

                <Border x:Name="ErrorBorder"
                        Background="#FFF0F0"
                        BorderBrush="#FF9999"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="10"
                        Margin="0,20,0,10"
                        Visibility="Collapsed">
                    <TextBlock x:Name="ErrorTextBlock" 
                               Foreground="#CC0000" 
                               TextWrapping="Wrap"/>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="2" 
                Background="#F8F8F8" 
                BorderBrush="#DDDDDD" 
                BorderThickness="0,1,0,0"
                Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CancelButton" 
                        Content="Отмена" 
                        Width="120"
                        Click="CancelButton_Click"/>

                <Button x:Name="SaveButton" 
                        Content="Добавить" 
                        Background="#00FA9A"
                        Foreground="#000000"
                        BorderBrush="#00CD8B"
                        FontWeight="Bold"
                        Width="120"
                        Click="SaveButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>