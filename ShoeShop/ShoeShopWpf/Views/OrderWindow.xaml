<Window x:Class="ShoeShopWpf.Views.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoeShopWpf.Views"
                Title="Заказы" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterOwner"
        Icon="/Icon.ico">

    <Grid Background="#FFFFFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock x:Name="TitleTextBlock" 
                           Text="Заказы" 
                           FontSize="40" 
                           HorizontalAlignment="Center"
                           FontWeight="Bold"
                           Foreground="#2E8B57"/>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <TextBlock x:Name="UserRoleTextBlock"
                               Text="Пользователь"
                               FontSize="12"
                               FontStyle="Italic"
                               Foreground="#666666"/>
                <TextBlock Text=": "
                               FontSize="12"
                               Foreground="#666666"/>
                <TextBlock Text="{Binding CurrentUser.FullName}"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#2E8B57"/>
            </StackPanel>
        </StackPanel>
        <DataGrid x:Name="OrdersDataGrid" 
                  Grid.Row="1"
                  Margin="10"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  SelectionMode="Single"
                  BorderBrush="#7FFF00"
                  BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="№ заказа" 
                                    Binding="{Binding OrderId}" 
                                    Width="80"/>
                <DataGridTextColumn Header="Клиент" 
                                    x:Name="CustomerColumn"
                                    Binding="{Binding Customer.FullName}" 
                                    Width="150"/>
                <DataGridTemplateColumn Header="Состав заказа" 
                                        Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ItemsControl ItemsSource="{Binding OrderItems}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="0,2">
                                            <TextBlock Text="{Binding ArticleNavigation.Name}" 
                                                       FontWeight="Bold"/>
                                            <TextBlock Text=" - " Margin="2,0"/>
                                            <TextBlock Text="{Binding Quantity}"/>
                                            <TextBlock Text=" шт." Margin="2,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Дата заказа" 
                                    Binding="{Binding OrderDate, StringFormat={}{0:dd.MM.yyyy}}" 
                                    Width="100"/>
                <DataGridTextColumn Header="Стоимость" 
                                    Binding="{Binding TotalPrice, StringFormat={}{0:N2} ₽}" 
                                    Width="100"/>
                <DataGridTextColumn Header="Статус" 
                                    Binding="{Binding Status}" 
                                    Width="100"/>
                <DataGridTextColumn Header="Код получения" 
                                    Binding="{Binding PickupCode}" 
                                    Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="2" 
                Background="#F8F8F8" 
                BorderBrush="#DDDDDD" 
                BorderThickness="0,1,0,0"
                Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CloseButton" 
                        Content="Закрыть" 
                        Width="120"
                        Click="CloseButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>